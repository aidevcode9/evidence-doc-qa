# Prompt version used in version snapshots and eval gating.
DOCQA_PROMPT_VERSION=v3.1.0
# Retrieval version used in version snapshots and eval gating.
DOCQA_RETRIEVAL_VERSION=v3.1.0
# Model identifier recorded in telemetry and evals.
DOCQA_MODEL_ID=demo-no-llm
# Parser mode for ingestion (tier0/tier1/tier2).
DOCQA_PARSER_MODE=tier0
# Index version recorded on index records.
DOCQA_INDEX_VERSION=v3.1.0

# Base data directory for raw files and local DB.
DOCQA_DATA_DIR=data
# Postgres connection string (Supabase or Azure Postgres).
DB_DATABASE_URL=postgresql+psycopg://USER:PASSWORD@HOST:5432/DBNAME
# Deterministic chunk size (characters).
DOCQA_CHUNK_SIZE=900
# Deterministic chunk overlap (characters).
DOCQA_CHUNK_OVERLAP=150
# Minimum confidence threshold for answers.
DOCQA_CONF_MIN=0.35

# Use local (hash-based) embeddings when true; false indicates remote embeddings.
EMBEDDINGS_LOCAL=false
# Embedding mode override (local/remote). Ignored when EMBEDDINGS_LOCAL is set.
EMBEDDINGS_MODE=remote
# Embedding vector size for local embeddings.
EMBEDDINGS_DIM=16

# Azure OpenAI endpoint (e.g., https://<name>.openai.azure.com).
AZURE_OPENAI_ENDPOINT=
# Azure OpenAI API key.
AZURE_OPENAI_API_KEY=
# Azure OpenAI API version.
AZURE_OPENAI_API_VERSION=2024-02-15-preview
# Azure OpenAI embeddings deployment name.
AZURE_OPENAI_EMBEDDINGS_DEPLOYMENT=

# Azure Blob Storage connection info.
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER=docqa-raw

# Azure AI Search endpoint (e.g., https://<name>.search.windows.net).
AZURE_SEARCH_ENDPOINT=https://doc-qa-search.search.windows.net
# Azure AI Search admin/query API key.
AZURE_SEARCH_API_KEY=
# Azure AI Search index name.
AZURE_SEARCH_INDEX=docqa-index
# Create index on startup when set to 1.
AZURE_SEARCH_CREATE_INDEX=0
# Enable indexing pipeline when set to 1.
DOCQA_ENABLE_INDEXING=1

# Static token for /v1/metrics (set empty to disable auth).
DOCQA_METRICS_ADMIN_TOKEN=
# Comma-separated list of allowed origins for CORS.
DOCQA_ALLOWED_ORIGINS=http://localhost:3000
# Total results returned after fusion.
DOCQA_TOP_K=5
# Number of vector results retrieved before fusion.
DOCQA_TOP_K_VECTOR=5
# Number of BM25 results retrieved before fusion.
DOCQA_TOP_K_BM25=5
# RRF constant used in fusion scoring.
DOCQA_RRF_K=60

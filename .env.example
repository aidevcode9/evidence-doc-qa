# Prompt version used in version snapshots and eval gating.
PROMPT_VERSION=v3.1.0
# Retrieval version used in version snapshots and eval gating.
RETRIEVAL_VERSION=v3.1.0
# Model identifier recorded in telemetry and evals.
MODEL_ID=demo-no-llm
# Parser mode for ingestion (tier0/tier1/tier2).
PARSER_MODE=tier0
# Index version recorded on index records.
INDEX_VERSION=v3.1.0

# Base data directory for raw files and local DB.
DATA_DIR=data
# Postgres connection string (Supabase or Azure Postgres).
DATABASE_URL=postgresql+psycopg://USER:PASSWORD@HOST:5432/DBNAME
# Deterministic chunk size (characters).
CHUNK_SIZE=900
# Deterministic chunk overlap (characters).
CHUNK_OVERLAP=150
# Minimum confidence threshold for answers.
CONF_MIN=0.35

# Use local (hash-based) embeddings when true; false indicates remote embeddings.
LOCAL_EMBEDDINGS=true
# Embedding mode override (local/remote). Ignored when LOCAL_EMBEDDINGS is set.
EMBEDDINGS_MODE=local
# Embedding vector size for local embeddings.
EMBEDDINGS_DIM=16

# Azure AI Search endpoint (e.g., https://<name>.search.windows.net).
AZURE_SEARCH_ENDPOINT=
# Azure AI Search admin/query API key.
AZURE_SEARCH_API_KEY=
# Azure AI Search index name.
AZURE_SEARCH_INDEX=
# Create index on startup when set to 1.
AZURE_SEARCH_CREATE_INDEX=0
# Enable indexing pipeline when set to 1.
ENABLE_INDEXING=1

# Static token for /v1/metrics (set empty to disable auth).
METRICS_ADMIN_TOKEN=
# Total results returned after fusion.
TOP_K=5
# Number of vector results retrieved before fusion.
TOP_K_VECTOR=5
# Number of BM25 results retrieved before fusion.
TOP_K_BM25=5
# RRF constant used in fusion scoring.
RRF_K=60
